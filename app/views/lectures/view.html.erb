<div class="welcome_div">

<h1 class="welcome">Lecture View</h1>

<% if is_instructor?  %>
    <h1 class="greeting">Viewing as Instructor</h1>
    
    <%= form_with scope: :lecture, url: url_for(:action => 'terminate', :lec_id => params[:lec_id]), method: "post" do %>
        <%= submit_tag 'End Lecture' %>
    <%end%>

<%end%>

<% if is_student? %>
    <h1 class="greeting">Viewing as Student</h1>
<%end%>

<%= button_to "Go to Dashboard", user_index_path, method: :get%>

</div>