<h1>Sign Up</h1>

<%= form_with scope: :user, url: user_index_path, local: true do |f| %>
    <%= f.label :username%><br>
    <%= f.text_field :username%><br>
    <%= f.label :email%><br>
    <%= f.text_field :email%><br>
    <%= f.label :password%><br>
    <%= f.password_field :password%><br>
    <%= f.label :role%><br>
    <%= f.select :role, ['Instructor', 'Student'] %><br><br>

    <%= f.submit %>
<%end%>
